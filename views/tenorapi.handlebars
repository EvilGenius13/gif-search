<h1>Search for GIFS direct API</h1>
<div id="form-container">
<form action="/tenorapi">
  <input type="text" name="term" placeholder="Search Here!">
  <button type="submit">Search</button>
</form>
</div>

<div id="grid">
{{#each gifs}}
{{!-- set the data-width to whatever you want --}}
{{!-- Note that we're using properties of the gif (id, itemurl, url) to fill in information needed to render the gif --}}
    <div class="tenor-gif-embed" data-postid="{{this.id}}" data-share-method="host" data-width="300px"
      data-aspect-ratio="1.2266666666666666"><a
          href="{{this.itemurl}}"></a>
      <a href="{{this.url}}"></a></div>
    <script type="text/javascript" async src="https://tenor.com/embed.js"></script>
{{/each}}
</div>  


